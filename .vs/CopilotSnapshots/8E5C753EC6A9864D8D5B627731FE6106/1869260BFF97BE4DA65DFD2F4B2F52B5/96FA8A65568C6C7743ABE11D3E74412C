<div class="iphone18pro-wallpaper">
    <div class="photo-collage-grid">
        @for (int i = 0; i < ScreenshotFiles.Count; i++)
        {
            var angle = (i % 4 - 2) * 7; // -14, -7, 0, 7 graden
            var scale = 1.0 + (i % 3) * 0.08; // 1.0, 1.08, 1.16
            <img src="/@ScreenshotFiles[i]" alt="Screenshot" class="collage-img-grid fade-in" style="transform:rotate(@angle deg) scale(@scale); animation-delay:@(i*0.12)s;" />
        }
    </div>
    <div class="vorjeans-box">
        <span class="vorjeans-stripe-text">vörjeans</span>
    </div>
</div>

@code {
    // Voeg hier je schermafbeeldingen toe
    List<string> ScreenshotFiles = new()
    {
        "IMG_3120.JPG",
        "Schermafbeelding 2025-08-06 194813.png",
        "Schermafbeelding 2025-08-06 194858.png",
        "Schermafbeelding 2025-08-06 194920.png",
        "Schermafbeelding 2025-08-06 194941.png",
        "Schermafbeelding 2025-08-06 200811.png"
    };

    public class PhotoInfo
    {
        public string FileName { get; set; } = "";
        public int Width { get; set; } = 120;
        public int Height { get; set; } = 180;
        public string Widthpx => $"{Width}px";
        public string Heightpx => $"{Height}px";
    }
}

