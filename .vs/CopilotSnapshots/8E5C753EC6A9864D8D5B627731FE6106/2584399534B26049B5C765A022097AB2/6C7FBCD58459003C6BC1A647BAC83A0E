    <div class="photo-collage-grid">
        @for (int i = 0; i < ScreenshotFiles.Count; i++)
        {
            var angle = (i % 5 - 2) * 8;
            var scale = 1.0 + (i % 4) * 0.07;
            var isWide = ScreenshotFiles[i] == "Schermafbeelding 2025-08-06 210139.png";
            var w = isWide ? 320 : 100;
            var h = 140;
            var extraStyle = isWide ? "grid-column: 1 / -1;" : "";
            var styleString = $"opacity:0.2; width:{w}px; height:{h}px; {extraStyle} transform:rotate({angle}deg) scale({scale}); animation-delay:{i*0.12}s;";
            <img src="@($"/{ScreenshotFiles[i]}")" alt="Screenshot" class="collage-img-grid @(isWide ? "collage-img-wide" : "")" style="@styleString" />
        }
    </div>
    <div class="vorjeans-box">
        <span class="vorjeans-stripe-text">vörjeans</span>
    </div>
</div>

