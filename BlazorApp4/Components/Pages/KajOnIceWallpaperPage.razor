@page "/kajonicewallpaper"
@rendermode InteractiveServer

<div class="night-ice-wallpaper">
    <svg viewBox="0 0 430 932" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" class="night-ice-bg" preserveAspectRatio="xMidYMid slice">
