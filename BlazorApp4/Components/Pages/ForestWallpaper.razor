<div class="apple-watch-42-face">
    <svg viewBox="0 0 126 157" width="126" height="157" aria-label="Apple Watch 42mm">
        <defs>
            <clipPath id="watch42ScreenClip">
                <rect x="0" y="0" width="126" height="157" rx="32" />
            </clipPath>
            <filter id="watch42Shadow" x="-20%" y="-20%" width="140%" height="140%">
                <feDropShadow dx="0" dy="6" stdDeviation="8" flood-color="#000" flood-opacity="0.18" />
            </filter>
            <filter id="photoGlow42" x="-30%" y="-30%" width="160%" height="160%">
                <feGaussianBlur stdDeviation="6" result="blur" />
                <feMerge>
                    <feMergeNode in="blur" />
                    <feMergeNode in="SourceGraphic" />
                </feMerge>
            </filter>
            <!-- Fade mask for background, similar to iPhone -->
            <linearGradient id="watchBgFade" x1="0" y1="0" x2="0" y2="1">
                <stop offset="80%" stop-color="white" stop-opacity="1" />
                <stop offset="100%" stop-color="white" stop-opacity="0" />
            </linearGradient>
            <mask id="watchBgMask">
                <rect x="0" y="0" width="126" height="157" fill="url(#watchBgFade)" />
            </mask>
            <!-- ClipPaths -->
            <clipPath id="circle1"><circle cx="32" cy="38" r="22" /></clipPath>
            <clipPath id="circle2"><circle cx="94" cy="38" r="22" /></clipPath>
            <clipPath id="circle3"><circle cx="32" cy="86" r="22" /></clipPath>
            <clipPath id="circle4"><circle cx="94" cy="86" r="22" /></clipPath>

        </defs>
