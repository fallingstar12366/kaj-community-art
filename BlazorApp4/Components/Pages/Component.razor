@page "/c"

<!-- Apple Watch 7 45mm Face met iPhone wallpaper, donkere overlay en twee rechthoekige collage-foto's -->
<div class="apple-watch-7-face">
    <svg viewBox="0 0 128 168" width="128" height="168" aria-label="Apple Watch 7 45mm">
        <defs>
            <clipPath id="watchScreenClip">
                <rect x="0" y="0" width="128" height="168" rx="36" />
            </clipPath>
            <filter id="watchShadow" x="-20%" y="-20%" width="140%" height="140%">
                <feDropShadow dx="0" dy="6" stdDeviation="8" flood-color="#000" flood-opacity="0.18" />
            </filter>
            <filter id="photoGlow" x="-30%" y="-30%" width="160%" height="160%">
                <feGaussianBlur stdDeviation="6" result="blur" />
                <feMerge>
                    <feMergeNode in="blur" />
                    <feMergeNode in="SourceGraphic" />
                </feMerge>
            </filter>
        </defs>
        <!-- Wallpaper als achtergrond -->
        <image href="/Pa To Ta Na Kako/Pa To Ta Na Kako.png"
               x="0" y="0" width="128" height="168"
               clip-path="url(#watchScreenClip)"
               preserveAspectRatio="xMidYMid slice" />
        <!-- Donkere overlay -->
        <rect x="0" y="0" width="128" height="168" rx="36"
              fill="rgba(30,20,40,0.38)" clip-path="url(#watchScreenClip)" />
        <!-- Collage Foto 1 (linksboven, rechthoek met glow) -->
        <g filter="url(#photoGlow)">
            <rect x="12" y="14" width="38" height="28" rx="7" ry="7" fill="#fff5" />
            <clipPath id="photo1clipRect">
                <rect x="12" y="14" width="38" height="28" rx="7" ry="7" />
            </clipPath>
            <image href="/Pa To Ta Na Kako/Pa To Ta Na Kako1.png"
                   x="12" y="14" width="38" height="28"
                   clip-path="url(#photo1clipRect)" />
            <rect x="12" y="14" width="38" height="28" rx="7" ry="7" fill="none" stroke="#fff" stroke-width="2" />
        </g>
        <!-- Collage Foto 2 (rechts boven de titel, rechthoek met glow) -->
        <g filter="url(#photoGlow)">
            <rect x="78" y="62" width="38" height="28" rx="7" ry="7" fill="#fff5" />
            <clipPath id="photo2clipRect">
                <rect x="78" y="62" width="38" height="28" rx="7" ry="7" />
            </clipPath>
            <image href="/Pa To Ta Na Kako/Pa To Ta Na Kako6.png"
                   x="78" y="62" width="38" height="28"
                   clip-path="url(#photo2clipRect)" />
            <rect x="78" y="62" width="38" height="28" rx="7" ry="7" fill="none" stroke="#fff" stroke-width="2" />
        </g>
        <g filter="url(#photoGlow)">
            <rect x="12" y="80" width="38" height="28" rx="7" ry="7" fill="#fff5" />
            <clipPath id="photo3clipRect">
                <rect x="12" y="80" width="38" height="28" rx="7" ry="7" />
            </clipPath>
            <image href="/Pa To Ta Na Kako/Pa To Ta Na Kako5.png"
                   x="12" y="80" width="38" height="28"
                   clip-path="url(#photo3clipRect)" />
            <rect x="12" y="80" width="38" height="28" rx="7" ry="7" fill="none" stroke="#fff" stroke-width="2" />
        </g>
        <!-- Watch body rand en schaduw -->
        <rect x="0" y="0" width="128" height="168" rx="36"
              fill="none" stroke="#222" stroke-width="4" filter="url(#watchShadow)" />
        <!-- Titel in het midden (kleiner) -->
        <text x="64" y="120" text-anchor="middle" font-family="'Permanent Marker', cursive" font-size="11"
              fill="#e75480" stroke="#fff" stroke-width="0.7" paint-order="stroke">
            Pa To Ta Na Kako?
        </text>
        <!-- Optioneel: subtiele rand -->
        <rect x="2" y="2" width="124" height="164" rx="34" fill="none" stroke="#fff4" stroke-width="2" />
    </svg>
    <div class="apple-watch-label">Apple Watch 7<br />45mm</div>
</div>

<div class="iphone15pro-screen">
    <div class="iphone15pro-bg-overlay"></div>
    <div class="iphone15pro-center-content">
        <div class="iphone15pro-content-block">
