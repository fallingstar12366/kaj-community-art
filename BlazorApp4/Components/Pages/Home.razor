@page "/" // Deze pagina is bereikbaar op de root-URL

@rendermode InteractiveServer // Blazor Server: interactieve pagina

<button @onclick="ToggleWallpaper" style="position:absolute;top:12px;right:12px;z-index:30;">
    Wissel wallpaper
</button>

<!--
Hoofdcontainer die het uiterlijk van een iPhone nabootst.
-->
<div class="iphone18pro-wallpaper" style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
    <!-- Blur-gedeelte met foto's als achtergrond -->
    @if (SelectedWallpaper == 0)
    {
        <div class="clock-blur-container">
            <div class="clock-bg-row">
                <img src="/Screenshot 2025-08-07 095428.png" alt="Clock Background 1" class="clock-bg" />
                <img src="/Schermafbeelding 2025-08-06 194813.png" alt="Clock Background 2" class="clock-bg" />
            </div>
            <div class="clock-blur"></div>
        </div>
    }
    @if (SelectedWallpaper == 1)
    {
        <div class="clock-blur-container">
            <div class="clock-bg-row">
                <img src="/IMG_3120.JPG" alt="Clock Background 3" class="clock-bg" />
                <img src="/Schermafbeelding 2025-08-06 194858.png" alt="Clock Background 4" class="clock-bg" />
            </div>
            <div class="clock-blur"></div>
        </div>
    }
    <!--
    Collage-grid voor de foto's.
    -->
    <div class="photo-collage-grid">
        @for (int i = 0; i < ScreenshotFiles.Count; i++)
        {
            var angle = (i % 5 - 2) * 8;
            var scale = 1.0 + (i % 4) * 0.07;
            var isWide = ScreenshotFiles[i] == "Schermafbeelding 2025-08-06 210139.png";
            var isBig = ScreenshotFiles[i] == "Schermafbeelding 2025-08-06 214454.png";
            var w = isBig ? 400 : (isWide ? 320 : 100);
            var h = 140;
            var extraStyle = isWide ? "grid-column: 1 / -1;" : "";
            var styleString = $"opacity:0.9 !important; width:{w}px; height:{h}px; {extraStyle} transform:rotate({angle}deg) scale({scale}); animation-delay:{i*0.12}s;";
            <img src="@($"/{ScreenshotFiles[i]}")"
                 alt="Screenshot"
                 class="collage-img-grid @(isWide ? "collage-img-wide" : "") fade-in"
                 style="@styleString" />
        }
    </div>
    <!--
    Box onderaan met de tekst 'vörjeans'
    -->
    <div class="vorjeans-box">
        <span class="vorjeans-stripe-text">vörjeans</span>
    </div>
</div>

@code {
    // Wallpaper keuze: 0 = origineel, 1 = nieuw
    int SelectedWallpaper = 0;

    void ToggleWallpaper()
    {
        SelectedWallpaper = SelectedWallpaper == 0 ? 1 : 0;
    }

    // Lijst met bestandsnamen van de afbeeldingen in de collage
    List<string> ScreenshotFiles = new()
    {
        "Schermafbeelding 2025-08-06 211023.png",
        "Schermafbeelding 2025-08-06 214454.png", // Deze wordt extra breed getoond
        "Screenshot 2025-08-07 085811.png",
        "Schermafbeelding 2025-08-06 210139.png", // Deze wordt breed getoond
        "Schermafbeelding 2025-08-06 194920.png",
        "Schermafbeelding 2025-08-06 194941.png",
        "Schermafbeelding 2025-08-06 200811.png"
    };

    // (Optioneel, nu niet gebruikt) Structuur voor extra foto-informatie
    public class PhotoInfo
    {
        public string FileName { get; set; } = "";
        public int Width { get; set; } = 120;
        public int Height { get; set; } = 180;
        public string Widthpx => $"{Width}px";
        public string Heightpx => $"{Height}px";
    }
}

<style>
    /* Container met iPhone-stijl */
    .iphone18pro-wallpaper {
        width: 430px;
        height: 932px;
        border: 8px solid #222;
        border-radius: 48px;
        box-shadow: 0 0 32px rgba(0,0,0,0.2);
        overflow: hidden;
        position: relative;
        background: repeating-linear-gradient( to right, #b22217 0px, #b22217 10px, #fff 10px, #fff 20px );
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    /* Blur-gedeelte met foto's als achtergrond */
    .clock-blur-container {
        position: absolute;
        top: 90px;
        left: 50%;
        transform: translateX(-50%);
        width: 400px;
        height: 200px;
        border-radius: 48px;
        overflow: hidden;
        z-index: 5;
        pointer-events: none;
    }

    .clock-bg-row {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: row;
    }

    .clock-bg {
        width: 50%;
        height: 100%;
        object-fit: cover;
    }

    .clock-blur {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 48px;
        background: rgba(255,255,255,0.18);
        backdrop-filter: blur(3px);
        z-index: 10;
        pointer-events: none;
    }
    /* Grid voor de collage */
    .photo-collage-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        gap: 24px 14px;
        justify-items: center;
        align-items: start;
        padding: 140px 0 0px 0;
        width: 100%;
        max-width: 400px;
        box-sizing: border-box;
    }
    /* Styling voor de foto's */
    .collage-img-grid {
        object-fit: cover;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.18), 0 2px 8px #fff8;
        border: 3px solid #fff8;
        background: #fff;
        transition: transform 0.3s cubic-bezier(.25,.8,.25,1), box-shadow 0.3s;
        cursor: pointer;
        filter: drop-shadow(0 2px 8px #2566af33);
        max-width: 100%;
        max-height: 100%;
    }
    /* Extra styling voor brede foto's */
    .collage-img-wide {
        grid-column: 1 / -1;
        width: 320px;
        height: 140px;
        justify-self: center;
        margin-top: 0;
        margin-bottom: 0;
    }
    /* Fade-in animatie bij het tonen van de foto */
    .fade-in {
        animation: fadeIn 0.7s ease forwards;
    }
    /* Box onderaan met de tekst */
    .vorjeans-box {
        position: absolute;
        bottom: 32px;
        left: 50%;
        transform: translateX(-50%);
        background: #2566afcc;
        border-radius: 16px;
        padding: 0.7rem 1.8rem;
        min-width: 140px;
        max-width: 260px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        display: inline-block;
        z-index: 20;
        backdrop-filter: blur(2px);
        text-align: center;
    }

    .vorjeans-stripe-text {
        font-size: 1.7rem;
        font-weight: 800;
        font-family: 'Rock Salt', cursive;
        color: #ffdd00;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.6);
        letter-spacing: 0.15em;
    }
</style>