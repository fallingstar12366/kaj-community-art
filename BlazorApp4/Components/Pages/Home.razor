@page "/" // Deze pagina is bereikbaar op de root-URL

@rendermode InteractiveServer // Blazor Server: interactieve pagina

<button @onclick="ToggleWallpaper" style="position:absolute;top:12px;right:12px;z-index:30;">
    Wissel wallpaper
</button>
<!-- Apple Watch 7 45mm: rood-witte achtergrond, twee grote cirkelfoto's diagonaal, compacte blauwe vorjeans-balk zonder gloss -->
<div class="apple-watch-screen-only right">
    <svg viewBox="0 0 128 168" width="128" height="168" aria-label="Apple Watch 7 45mm Screen">
        <defs>
            <clipPath id="watchScreenClipOnly">
                <rect x="0" y="0" width="128" height="168" rx="36" />
            </clipPath>
            <pattern id="redWhiteStripes" patternUnits="userSpaceOnUse" width="20" height="20">
                <rect x="0" y="0" width="10" height="20" fill="#b22217" />
                <rect x="10" y="0" width="10" height="20" fill="#fff" />
            </pattern>
            <!-- Cirkelvormige maskers voor de foto's -->
            <clipPath id="circle1">
                <circle cx="38" cy="44" r="34" />
            </clipPath>
            <clipPath id="circle2">
                <circle cx="90" cy="100" r="32" />
            </clipPath>
            <!-- Schaduw voor de foto's -->
            <filter id="photoShadow" x="-40%" y="-40%" width="180%" height="180%">
                <feDropShadow dx="0" dy="6" stdDeviation="6" flood-color="#222" flood-opacity="0.22" />
            </filter>
            <!-- Glow effect voor extra diepte -->
            <filter id="photoGlow" x="-50%" y="-50%" width="200%" height="200%">
                <feDropShadow dx="0" dy="0" stdDeviation="10" flood-color="#fff" flood-opacity="0.15" />
            </filter>
        </defs>
        <!-- Rood-witte achtergrond -->
        <rect x="0" y="0" width="128" height="168" rx="36" fill="url(#redWhiteStripes)" clip-path="url(#watchScreenClipOnly)" />
        <!-- Twee grote foto's als cirkels diagonaal met schaduw en glow -->
        <g filter="url(#photoShadow)">
            <image href="/vörjeans/vörjeans8.png" x="4" y="10" width="68" height="68"
                   opacity="0.98" clip-path="url(#circle1)" filter="url(#photoGlow)" style="transition: opacity 0.3s;" />
            <image href="/vörjeans/vörjeans3.png" x="58" y="68" width="64" height="64"
                   opacity="0.97" clip-path="url(#circle2)" filter="url(#photoGlow)" style="transition: opacity 0.3s;" />
        </g>
        <!-- Compacte blauwe balk met vorjeans-titel, tekst nu perfect verticaal gecentreerd -->
        <rect x="20" y="132" width="88" height="22" rx="8"
              fill="#2566afcc" stroke="#2566af" stroke-width="1" />
        <text x="64" y="143" text-anchor="middle" dominant-baseline="middle"
              font-family="'Rock Salt', cursive" font-size="13" font-weight="800"
              fill="#ffdd00" stroke="#222" stroke-width="0.6" paint-order="stroke"
              style="letter-spacing:0.13em;">
            vörjeans
        </text>
        <!-- Rand van het horloge -->
        <rect x="0" y="0" width="128" height="168" rx="36" fill="none" stroke="#222" stroke-width="2" />
    </svg>
    <div class="apple-watch-label">Apple Watch 7<br />45mm Screen</div>
</div>

<!--
Hoofdcontainer die het uiterlijk van een iPhone nabootst.
-->
<div class="iphone18pro-wallpaper" style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
    <!-- Blur-gedeelte met foto's als achtergrond -->
    @if (SelectedWallpaper == 0)
    {
        <div class="clock-blur-container">
            <div class="clock-bg-row">
                <img src="/vörjeans/vörjeans9.png" alt="Clock Background 1" class="clock-bg" />
                <img src="/vörjeans/vörjeans1.png" alt="Clock Background 2" class="clock-bg" />
            </div>
            <div class="clock-blur"></div>
        </div>
    }
    @if (SelectedWallpaper == 1)
    {
        <div class="clock-blur-container">
            <div class="clock-bg-row">
                <img src="/IMG_3120.JPG" alt="Clock Background 3" class="clock-bg" />
                <img src="/Schermafbeelding 2025-08-06 194858.png" alt="Clock Background 4" class="clock-bg" />
            </div>
            <div class="clock-blur"></div>
        </div>
    }
    <!--
    Collage-grid voor de foto's.
    -->
    <div class="photo-collage-grid">
        @for (int i = 0; i < ScreenshotFiles.Count; i++)
        {
            var angle = (i % 5 - 2) * 8;
            var scale = 1.0 + (i % 4) * 0.07;
            var isWide = ScreenshotFiles[i] == "vörjeans/vörjeans6.png";
            var isBig = ScreenshotFiles[i] == "Schermafbeelding 2025-08-06 214454.png";
            var w = isBig ? 400 : (isWide ? 320 : 100);
            var h = 140;
            var extraStyle = isWide ? "grid-column: 1 / -1;" : "";
            var styleString = $"opacity:0.9 !important; width:{w}px; height:{h}px; {extraStyle} transform:rotate({angle}deg) scale({scale}); animation-delay:{i*0.12}s;";
            <img src="@($"/{ScreenshotFiles[i]}")"
                 alt="Screenshot"
                 class="collage-img-grid @(isWide ? "collage-img-wide" : "") fade-in"
                 style="@styleString" />
        }
    </div>
    <!--
    Box onderaan met de tekst 'vörjeans'
    -->
    <div class="vorjeans-box">
        <span class="vorjeans-stripe-text">vörjeans</span>
    </div>
</div>

@code {
    // Wallpaper keuze: 0 = origineel, 1 = nieuw
    int SelectedWallpaper = 0;

    void ToggleWallpaper()
    {
        SelectedWallpaper = SelectedWallpaper == 0 ? 1 : 0;
    }

    // Lijst met bestandsnamen van de afbeeldingen in de collage
    List<string> ScreenshotFiles = new()
    {
        "vörjeans/vörjeans7.png",
        "vörjeans/vörjeans8.png", // Deze wordt extra breed getoond
        "vörjeans/vörjeans10.png",
        "vörjeans/vörjeans6.png", // Deze wordt breed getoond
        "vörjeans/vörjeans3.png",
        "vörjeans/vörjeans4.png",
        "vörjeans/vörjeans5.png"
    };

    // (Optioneel, nu niet gebruikt) Structuur voor extra foto-informatie
    public class PhotoInfo
    {
        public string FileName { get; set; } = "";
        public int Width { get; set; } = 120;
        public int Height { get; set; } = 180;
        public string Widthpx => $"{Width}px";
        public string Heightpx => $"{Height}px";
    }
}

<style>
    /* Container met iPhone-stijl */
    .iphone18pro-wallpaper {
        width: 430px;
        height: 932px;
        border: 8px solid #222;
        border-radius: 48px;
        box-shadow: 0 0 32px rgba(0,0,0,0.2);
        overflow: hidden;
        position: relative;
        background: repeating-linear-gradient( to right, #b22217 0px, #b22217 10px, #fff 10px, #fff 20px );
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    /* Blur-gedeelte met foto's als achtergrond */
    .clock-blur-container {
        position: absolute;
        top: 90px;
        left: 50%;
        transform: translateX(-50%);
        width: 400px;
        height: 200px;
        border-radius: 48px;
        overflow: hidden;
        z-index: 5;
        pointer-events: none;
    }

    .clock-bg-row {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: row;
    }

    .clock-bg {
        width: 50%;
        height: 100%;
        object-fit: cover;
    }

    .clock-blur {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 48px;
        background: rgba(255,255,255,0.18);
        backdrop-filter: blur(3px);
        z-index: 10;
        pointer-events: none;
    }
    /* Grid voor de collage */
    .photo-collage-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        gap: 24px 14px;
        justify-items: center;
        align-items: start;
        padding: 140px 0 0px 0;
        width: 100%;
        max-width: 400px;
        box-sizing: border-box;
    }
    /* Styling voor de foto's */
    .collage-img-grid {
        object-fit: cover;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.18), 0 2px 8px #fff8;
        border: 3px solid #fff8;
        background: #fff;
        transition: transform 0.3s cubic-bezier(.25,.8,.25,1), box-shadow 0.3s;
        cursor: pointer;
        filter: drop-shadow(0 2px 8px #2566af33);
        max-width: 100%;
        max-height: 100%;
    }
    /* Extra styling voor brede foto's */
    .collage-img-wide {
        grid-column: 1 / -1;
        width: 320px;
        height: 140px;
        justify-self: center;
        margin-top: 0;
        margin-bottom: 0;
    }
    /* Fade-in animatie bij het tonen van de foto */
    .fade-in {
        animation: fadeIn 0.7s ease forwards;
    }
    /* Box onderaan met de tekst */
    .vorjeans-box {
        position: absolute;
        bottom: 32px;
        left: 50%;
        transform: translateX(-50%);
        background: #2566afcc;
        border-radius: 16px;
        padding: 0.7rem 1.8rem;
        min-width: 140px;
        max-width: 260px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        display: inline-block;
        z-index: 20;
        backdrop-filter: blur(2px);
        text-align: center;
    }

    .vorjeans-stripe-text {
        font-size: 1.7rem;
        font-weight: 800;
        font-family: 'Rock Salt', cursive;
        color: #ffdd00;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.6);
        letter-spacing: 0.15em;
    }

    .apple-watch-screen-only {
        position: fixed;
        right: 32px;
        top: 50px;
        z-index: 100;
        pointer-events: none;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }

    .apple-watch-label {
        font-size: 1.1rem;
        color: #222;
        font-weight: 600;
        margin-top: 0.3em;
        text-align: right;
        letter-spacing: 0.04em;
        text-shadow: 0 1px 4px #fff8;
    }
</style>