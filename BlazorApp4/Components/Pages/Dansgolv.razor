            <clipPath id="watch42ScreenClip">
                <rect x="0" y="0" width="126" height="157" rx="32" />
            </clipPath>
            <filter id="watch42Shadow" x="-20%" y="-20%" width="140%" height="140%">
                <feDropShadow dx="0" dy="6" stdDeviation="8" flood-color="#000" flood-opacity="0.18" />
            </filter>
        </defs>
           
    </svg>
    <div class="apple-watch-label">Apple Watch 42mm</div>
</div>

@code {
    string[] WallpaperRoutes = new[]
    {
        "/forestwallpaper",
        "/saunawallpaper",
        "/kajwallpaper",
        "/kajspotlightwallpaper",
        "/home",
        "/weather"
    };

    // Persoonlijke watermark tekst
    string PersonalWatermarkText = "LB";

    // Base64-gecodeerde SVG met onzichtbare watermark
    string Base64WatermarkSvg =>
        "data:image/svg+xml;base64," +
        Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes($@"<svg xmlns='http://www.w3.org/2000/svg' width='430' height='932' viewBox='0 0 430 932'><text x='50%' y='95%' text-anchor='middle' font-size='32' fill='#000' opacity='0.01' font-family='Arial, sans-serif'>{PersonalWatermarkText}</text></svg>"));

    void ToggleWallpaper()
    {
        var current = Navigation.Uri.ToLower();
        var baseUri = Navigation.BaseUri.ToLower();
        var relative = current.StartsWith(baseUri) ? current.Substring(baseUri.Length - 1) : current;
        int idx = Array.FindIndex(WallpaperRoutes, r => relative.StartsWith(r));
        int nextIdx = (idx + 1) % WallpaperRoutes.Length;
        Navigation.NavigateTo(WallpaperRoutes[nextIdx]);
    }
}

